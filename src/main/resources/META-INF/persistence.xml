<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- JPA Sürümü -->
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="market">
        <!-- persistence-unit konfigürasyonları buraya gelecek -->
        <properties>
            <!-- Veritabanı Driver ve URL Ayarları -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/market"/>

            <!-- Veritabanı Kullanıcı Adı ve Şifre -->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="123123"/>

            <!-- Hibernate Show SQL Ayarı -->
            <property name="hibernate.show_sql" value="true"/>

            <!-- Veritabanını Droplama ve Yeniden Oluşturma Ayarı -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

        <!-- Bu yapılandırma dosyası, veritabanı bağlantısı,
        JPA özellikleri ve diğer ilgili yapılandırmalar gibi JPA'ya özgü ayarları içerir.
        Bu ayarlar, uygulamanın hangi veritabanına bağlanacağını,
        hangi sürücüyü kullanacağını, veritabanı işlemlerinin nasıl yapılandırılacağını ve
        JPA öznitelikleri gibi bir dizi özelliği belirtir.
        Bu dosya, Java EE veya Jakarta EE
        uygulamalarında veritabanı işlemlerini yapılandırmak için temel bir yapı taşıdır.-->


    </persistence-unit>
</persistence>
